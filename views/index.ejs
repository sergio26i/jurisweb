                        <a href = "#cadastro-informacoes"  class = "btn-lista"><i class="fa fa-plus" aria-hidden="true"></i>Saiba Mais</a>
                    </div>
                    <div class = "revista-cientifica" id = "revista-cientifica">
                        <img src = "img/jurisquesti icone 02.png" alt = "Icone da Lista">
                        <h3 class = "titulo-lista">Revista Científica</h3>
