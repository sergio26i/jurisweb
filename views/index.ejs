        <!--------------- Cadastro de Informações -------------->

            <section id = "cadastro-informacoes">
                <div class = "informacoes-cadastro">
                    <div class = "preencha-campos">
                        <div class = "envelope">
                            <i class="fa fa-envelope fa-3x" aria-hidden="true"></i>
                        </div>
                        <h2 class = "preencha-campos-1">Quer receber informações atualizadas?</h2>
                        <h2 class = "preencha-campos-1">Preencha os campos do formulário.</h2>
                    </div>
                    <div class = "ser-avisado">
                        <h1 class = "novidades">Quero ser avisado(a) das novidades!</h1>
                        <div id = "error"></div>
                        <form action = "/" method = "POST" id = "form">
                            <label for="name" class = "nome">Nome</label><br>
                            <input type="name" id="name" name="name" required><br>
                            <label for="email" class = "email">Email</label><br>
                            <input type="email" id="email" name="email" required><br><br>
                            <button type="submit" value="Enviar Dados">Enviar Dados<i class="fa fa-arrow-up" aria-hidden="true"></i></button>
